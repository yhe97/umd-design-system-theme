{#
/**
 * @file
 * UMD Design System navigation utility component.
 *
 * Available variables:
 * - alert_off: string. true or empty.
 * - layout: string. full or empty.
 * - show_news: string. true or empty.
 * - show_admissions: string. true or empty.
 * - show_events: string. true or empty.
 * - show_gift: string. true or empty.
 * - gift_url: string (URL).
 * - show_search: string. true or empty.
 * - search_url: string (URL).
*/
#}

<umd-element-navigation-utility data-layout-lock="{{ layout }}"
  {% if alert_off %}
    data-alert-off="true"
  {% endif %}
  {% if show_news %}
    data-news="true"
  {% endif %}
  {% if show_admissions %}
    data-admissions="true"
  {% endif %}
  {% if show_events %}
    data-events="true"
  {% endif %}
  {% if show_gift %}
    data-gift="{{ gift_url }}"
  {% endif %}
  {% if show_search %}
    data-search="{{ search_url }}"
  {% endif %}
  >
</umd-element-navigation-utility>