{#
/**
 * @file
 * UMD Design System Card component.
 *
 * Available variables:
 * - card_image: URI.
 * - card_image_alt: string.
 * - eyebrow: string.
 * - headline: string.
 * - headline_url: string (URL).
 * - element_date: string (date).
 * - border: string. true or empty.
 * - aligned: string. true or empty.
 * - display_type: list or blank.
 * - cta_slot: Intended for Call to Action (slot).
 * - body_slot: WYSIWYG (slot).
*/
#}


<umd-element-card border="{{ border }}" aligned="{{ aligned }}" display="{{ display_type }}">
  <img slot="image" src="{{ card_image }}"
    alt="{{ card_image_alt }}" />
  <div slot="eyebrow">
    <p>{{ eyebrow }}</p>
  </div>
  {% if display_type == 'list' %}
    <p slot="headline">
      {% if headline_url %}
        <a href="{{ headline_url }}">
          {{ headline }}
        </a>
      {% else %}
        {{ headline }}
      {% endif %}
    </p>
  {% else %}
    <div slot="headline">
      <h3>
        {% block headline %}{% endblock %}
      </h3>
    </div>
  {% endif %}
  <div slot="text">
    {% block body_slot %}{% endblock %}
  </div>
  {% if element_date %}
    <div slot="date">
      <time datetime="{{ element_date }}">{{ element_date }}</time>
    </div>
  {% endif %}
</umd-element-card>
